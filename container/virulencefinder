Bootstrap:docker
From:python:3.8

%environment
        export PYTHONNOUSERSITE=True
        export PATH="/opt/conda/bin:/usr/bin:$PATH"
        export PATH="/opt/conda/envs/jasen/bin:$PATH"
        export PYTHONPATH="/opt/conda/envs/jasen/lib/python3.7/site-packages:/opt/conda/envs/jasen/lib"
        export BASH_ENV="/conda_init.sh:$BASH_ENV"
	export PICARD_HOME=/opt/conda/envs/jasen/share/picard-2.20.3-0/
	export PERL5LIB=$PERL5LIB:/opt/conda/envs/jasen/lib/site_perl/5.26.2/
        export TMPDIR=/tmp
        export TEMPDIR=/tmp

%labels
	MAINTAINER Markus Johansson <markus.h.johansson@skane.se>
	DESCRIPTION Singularity container for CMD microbiology WGS pipeline
	VERSION 2.0.4

%post
     VIRULENCEFINDER_VERSION=2.0.4
     KMA_VERSION=1.3.27
     BLAST_VERSION=2.9.0

	 apt-get update &&    \
	 apt-get upgrade -y && \
	 apt-get install -y git && \
	 rm -rf /var/lib/apt/lists/*/var/lib/apt/lists/*

         pip3 install tabulate==0.7.7 cgecore==1.5.5 biopython gitpython python-dateutil

	 cd /tmp && \
         rm -r virulencefinder && \
         git clone -b "${VIRULENCEFINDER_VERSION}" --depth 1 https://bitbucket.org/genomicepidemiology/virulencefinder.git && \
	 ln -s "/tmp/virulencefinder/virulencefinder.py" /usr/bin && \
         cd $HOME

	 git clone -b "${KMA_VERSION}" https://bitbucket.org/genomicepidemiology/kma.git resfinder/cge/kma && \
	 cd resfinder/cge/kma &&                                                                              \
	 make &&                                                                                              \
	 ln -s $(pwd)/kma $(pwd)/kma_index $(pwd)/kma_shm $(pwd)/kma_update /usr/bin

	 cd $HOME &&                                                                                                                                    \
	 wget -O blast.tar.gz "https://ftp.ncbi.nlm.nih.gov/blast/executables/blast+/${BLAST_VERSION}/ncbi-blast-${BLAST_VERSION}+-x64-linux.tar.gz" && \
	 tar -xzf blast.tar.gz && \
	 cd "ncbi-blast-${BLAST_VERSION}+/bin/" && \
	 chmod +x * && \
	 cp * /usr/bin && \
	 cd $HOME
